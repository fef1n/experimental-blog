<%- include("partials/header.ejs") %>

<section id="hero-section">
    <div class="flex-div">
        <h1>Experimental Blog</h1>
        <p class="introdutory-text">This is the Experimental Blog, feel free to check out our posts and make your own!</p>
    </div>
    <img class="hero-img" src="/images/numbers.jpg">
</section>

<section id="post-list-section">
    <h2>Community Posts</h2>
    <ul>
        <div></div>
        <% if(locals.authorList){
            if(authorList.length>0) {
                for(let i=0;i < authorList.length;i++) {%>
                <form action="/post" method="post">
                    <input type="hidden" name="title" value="<%=titleList[i]%>">
                    <input type="hidden" name="author" value="<%=authorList[i]%>">
                    <input type="hidden" name="content" value="<%=contentList[i]%>">
                    <input type="hidden" name="path" value="posts/<%=titleList[i]%>">
                    <input type="hidden" name="index" value="<%=i%>">
                    <input type="submit" value="<%=titleList[i]%>. By <%=authorList[i]%>"> <br>
                </form>
            <% }}else { %>
                <p>There are no community posts to be seen. Go ahead and be the first!</p>
            <%}}%>            
</section>

        

<%- include("partials/footer.ejs") %>
